<% layout('/layout/boilerplate.ejs') %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">

                <h3>Edit Your Listing</h3>

                <!-- Make sure this uses _method=PUT for method-override -->
                <form method="POST" action="/listings/<%= listing._id %>" enctype="multipart/form-data">
                    <input type="hidden" name="_method" value="PUT">
                    <div>
                        <label for="title">Title:</label>
                        <input type="text" name="listing[title]" id="title" value="<%= listing.title %>"
                            class="form-control"><br><br>
                    </div>
                    <div>

                        <label for="description">Description:</label><br>
                        <textarea name="listing[description]" id="description" rows="5" cols="30"
                            class="form-control"><%= listing.description %></textarea><br><br>
                    </div>
                    <div class="mb-3">
                        Original Listing Image<br>
                        <img src="<%= originalImage %>" width="200px">
                    </div>
                    <div>
                        <label for="imageUrl">Upload New Image:</label>
                        <input type="file" name="listing[image]"
                            class="form-control"><br><br>
                    </div>
                    <div>
                        <label for="price">Price:</label>
                        <input type="number" name="listing[price]" id="price" value="<%= listing.price %>"
                            class="form-control"><br><br>
                    </div>
                    <div>
                        <label for="location">Location:</label>
                        <input type="text" name="listing[location]" id="location" value="<%= listing.location %>"
                            class="form-control"><br><br>
                    </div>
                    <div>
                        <label for="country">Country:</label>
                        <input type="text" name="listing[country]" id="country" value="<%= listing.country %>"
                            class="form-control"><br><br>
                    </div>

                    <button type="submit" class="btn btn-dark edit-btn">Submit</button>
                    <br><br>
                </form>
            </div>
        </div>
    </body>

    </html>