<% layout('/layout/boilerplate.ejs') %>
    <style>
        @media(min-width:620px) {
            .container {
                display: flex;
                flex-direction: column;
                align-items: center;
            }
        }


        #filters {
            display: flex;
            justify-content: space-around;
            align-items: center;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            -webkit-overflow-scrolling: touch;
            gap: 1rem;
            padding: 30px 10px 10px 10px;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
            position: sticky;
            top: 0;
            background: white;
            z-index: 1000;
            scrollbar-width: thin;
            scrollbar-color: rgba(0, 0, 0, 0.2) transparent;
        }

        #filters::-webkit-scrollbar {
            height: 6px;
        }

        #filters::-webkit-scrollbar-thumb {
            background-color: rgba(0, 0, 0, 0.2);
            border-radius: 3px;
        }

        #filters::-webkit-scrollbar-track {
            background: transparent;
        }

        /* Apply scroll snap only to .filter items, exclude .tax-toggle */
        .filter {
            flex: 0 0 auto;
            scroll-snap-align: start;
            text-align: center;
        }

        .filter a {
            text-decoration: none;
            color: #222;
            opacity: 0.6;
            transition: all 0.3s ease;
        }

        .filter a:hover {
            opacity: 1;
        }

        /* Optional: Ensure .tax-toggle behaves normally, not part of slider */
        .tax-toggle {
            scroll-snap-align: none;
            border: 1px solid #777;
            padding: 6px 6px;
            border-radius: 10px;
            position: relative;
            top: 10px;
            height: 5vh;
            width: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
        }


        .tax-info {
            display: none;
            color: green;

        }

        .row {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        @media (max-width: 620px) {
            .container {
                display: flex;
                flex-direction: column;
            }

            .tax-toggle {
                width: 100%;

            }
        }
    </style>

    <body>
        <%= success %>

            <div class="container">
                <div id="filters" class="filters-container">
                    <div class="filter mt-5">
                        <a href="/category/Trending">
                            <i class="fa-solid fa-fire"></i>
                            <p>Trending</p>
                        </a>
                    </div>
                    <div class="filter mt-5">
                        <a href="/category/Rooms">
                            <i class="fa-solid fa-bed"></i>
                            <p>Rooms</p>
                        </a>
                    </div>
                    <div class="filter mt-5">
                        <a href="/category/Iconic Cities">
                            <i class="fa-solid fa-mountain-city"></i>
                            <p>Iconic Cities</p>
                        </a>
                    </div>
                    <div class="filter mt-5">
                        <a href="/category/Mountain">
                            <i class="fa-solid fa-mountain"></i>
                            <p>Mountain</p>
                        </a>
                    </div>
                    <div class="filter mt-5">
                        <a href="/category/Castles">
                            <i class="fa-brands fa-fort-awesome"></i>
                            <p>Castles</p>
                        </a>
                    </div>
                    <div class="filter mt-5">
                        <a href="/category/Amazing Pools">
                            <i class="fa-solid fa-person-swimming"></i>
                            <p>Amazing Pools</p>
                        </a>
                    </div>
                    <div class="filter mt-5">
                        <a href="/category/Camping">
                            <i class="fa-solid fa-route"></i>
                            <p>Camping</p>
                        </a>
                    </div>
                    <div class="filter mt-5">
                        <a href="/category/Farms">
                            <i class="fa-solid fa-tractor"></i>
                            <p>Farms</p>
                        </a>
                    </div>
                    <div class="filter mt-5">
                        <a href="/listings/category/Arctic">
                            <i class="fa-solid fa-snowflake"></i>
                            <p>Arctic</p>
                        </a>
                    </div>
                </div>
                <div class="tax-toggle">
                    <div class="form-check-reverse form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                    </div>
                </div>

                <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
                    <% for( let listing of searchListings){ %>
                        <a href="/listings/<%= listing._id%>">
                            <div class="card" style="width: 20rem; height: 25rem;">
                                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
                                <div class="card-img-overlay">
                                    <%= listing.title %>
                                </div>
                                <div class="card-body">
                                    <span class="card-text">
                                        <%= listing.title %>
                                    </span><br>
                                    <span class="card-text">
                                        <%= listing.location %>,
                                    </span>
                                    <span class="card-text">
                                        <%= listing.country %>
                                    </span><br>
                                    <b class="card-text">
                                        &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
                                    </b>/night
                                    <i class="tax-info">&nbsp;&nbsp;&nbsp;+18% GST</i>
                                </div>
                            </div>
                        </a>
                        <% } %>
                </div>
            </div>
    </body>

    <script>
        let taxSwitch = document.getElementById('switchCheckDefault');
        taxSwitch.addEventListener("click", () => {
            let taxinfo = document.getElementsByClassName('tax-info');
            for (info of taxinfo) {
                if (taxSwitch.checked) {
                    info.style.display = "inline";

                } else {
                    info.style.display = "none";
                }
            }
        });
    </script>