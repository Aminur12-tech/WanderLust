<% layout('/layout/boilerplate.ejs') %>

    <body>
        <h3>
            <%= listing.title %>
        </h3>
        <div class="card mb-3 ">
            <img src="<%= listing.image.url %>" class="" alt="listing_image"
                style="width: 70%; height:60vh;">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.description %>
                </p>
                <span class="card-text">
                    <%= listing.location %>,
                </span>
                <span class="card-text">
                    <%= listing.country %>
                </span><br>
                <b class="card-text">
                    &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
                </b>/night
            </div>
        </div>

        <br>
        <div class="btn">
            <form action="/listings/<%=listing._id%>/edit">
                <button class="btn btn-dark edit-btn" style="width: 5rem;">Edit</button>
            </form>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark">DELETE</button>
            </form>
        </div>
        <br>
        <div class="mb-3">
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing._id%>/reviews" method="post">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="4" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">
                        Please submit some commments for review
                    </div>
                </div>
                <button class="btn btn-outline-dark" type="submit">Submit</button>
            </form>
            <hr>
            <p><b>All Reviews</b></p>
            <div class="row">
                <% for(review of listing.reviews) { %>
                    <div class="review-card col-5 ms-3 mb-3 ">
                        <div class="card-body">
                            <h5 class="card-title">Jane Doe</h5>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> stars
                            </p>
                            <form class="mb-3" method="POST"
                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>

    </body>