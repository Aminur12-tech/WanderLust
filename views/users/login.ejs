<% layout('/layout/boilerplate.ejs') %>

    <div class="row m-4">
        <h1 class="col-6 offset-3 text-center mt-3 mb-5" style="color: #fe424d;">Login on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/login" method="post">
                <div>
                    <label for="username">Username</label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="Enter Username"
                        required><br><br>
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control"
                        placeholder="Enter Password" required><br><br>
                </div>
                <button class="btn btn-success col-12"
                    style="display: flex; justify-content: center; align-items: center;">Login</button>
            </form>
        </div>
    </div>